<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="group">
            <control type="image">
                <description>background</description>
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>common/black.png</texture>
            </control>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>$INFO[Window.Property(umbrella.fanart)]</texture>
                <animation effect="fade" start="100" end="20" time="0" tween="sine" easing="in">WindowOpen</animation>
            </control>
        </control>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="200" tween="sine" easing="in" />
                <effect type="slide" start="0,-360" end="0" time="200" center="auto" tween="cubic" easing="in" />
            </animation>
            <control type="image" id="202">
                <width>80</width>
                <height>80</height>
                <top>0</top>
                <right>0</right>
                <texture>common/icon.png</texture>
                <animation effect="fade" start="100" end="50" time="0" tween="sine" easing="in">WindowOpen</animation>
            </control>
            <control type="label" id="204">
                <width>280</width>
                <height>20</height>
                <top>20</top>
                <right>80</right>
                <label>$ADDON[plugin.video.umbrella 40337]</label>
                <animation effect="fade" start="100" end="70" time="0" tween="sine" easing="in">WindowOpen</animation>
            </control>
            <control type="image" id="203">
                <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
                <width>800</width>
                <height>310</height>
                <top>0</top>
                <centerleft>50%</centerleft>
                <texture>$INFO[Window.Property(umbrella.clearlogo)]</texture>
            </control>
            <control type="textbox" id="2001">
                <centertop>70%</centertop>
                <centerleft>50%</centerleft>
                <width>800</width>
                <height>300</height>
                <font>font12</font>
                <align>center</align>
                <textcolor>FFB7B4BB</textcolor>
            </control>
            <control type="progress" id="5000">
                <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
                <description>Progressbar</description>
                <texturebg colordiffuse="$INFO[Window.Property(umbrella.highlight.color)]">common/gradient-diffuse-horizontal.png</texturebg>
                <midtexture colordiffuse="$INFO[Window.Property(umbrella.highlight.color)]">common/gradient-underlayer-horizontal-flipped.png</midtexture>
                <centertop>50%</centertop>
                <centerleft>50%</centerleft>
                <width>500</width>
                <height>25</height>
                <reveal>false</reveal>
            </control>
        </control>
    </controls>
</window>
